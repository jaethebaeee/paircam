---
const currentYear = new Date().getFullYear();

const footerLinks = {
  solutions: [
    { label: 'Automotive', href: '/solutions#automotive' },
    { label: 'Energy & Utilities', href: '/solutions#energy' },
    { label: 'Financial Services', href: '/solutions#financial' },
    { label: 'Fleet Management', href: '/solutions#fleet' },
  ],
  products: [
    { label: 'EV Market Data API', href: '/products#market-data' },
    { label: 'Charging Infrastructure', href: '/products#charging' },
    { label: 'Battery Analytics', href: '/products#battery' },
    { label: 'Custom Solutions', href: '/products#custom' },
  ],
  company: [
    { label: 'About', href: '/about' },
    { label: 'Contact', href: '/contact' },
    { label: 'Privacy Policy', href: '/privacy' },
    { label: 'Terms of Service', href: '/terms' },
  ],
};
---

<footer class="bg-gray-900 text-gray-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Brand -->
      <div class="col-span-1">
        <a href="/" class="flex items-center gap-2">
          <div class="w-8 h-8 bg-gradient-to-br from-green-500 to-blue-600 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <span class="text-xl font-bold text-white">EVSignals</span>
        </a>
        <p class="mt-4 text-sm text-gray-400">
          Real-time EV market intelligence powering smarter decisions across automotive, energy, and financial industries.
        </p>
        <div class="flex gap-4 mt-6">
          <a href="https://linkedin.com/company/evsignals" target="_blank" class="text-gray-400 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a href="https://twitter.com/evsignals" target="_blank" class="text-gray-400 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Solutions -->
      <div>
        <h3 class="text-white font-semibold mb-4">Solutions</h3>
        <ul class="space-y-2">
          {footerLinks.solutions.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-gray-400 hover:text-white transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Products -->
      <div>
        <h3 class="text-white font-semibold mb-4">Products</h3>
        <ul class="space-y-2">
          {footerLinks.products.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-gray-400 hover:text-white transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h3 class="text-white font-semibold mb-4">Company</h3>
        <ul class="space-y-2">
          {footerLinks.company.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-gray-400 hover:text-white transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
        <div class="mt-6">
          <p class="text-sm text-gray-400">Contact us</p>
          <a href="mailto:contact@evsignals.com" class="text-sm text-white hover:text-green-400 transition-colors">
            contact@evsignals.com
          </a>
        </div>
      </div>
    </div>

    <div class="border-t border-gray-800 mt-12 pt-8 flex flex-col md:flex-row justify-between items-center">
      <p class="text-sm text-gray-400">
        &copy; {currentYear} EVSignals. All rights reserved.
      </p>
      <p class="text-sm text-gray-500 mt-2 md:mt-0">
        Powering the future of electric mobility with data
      </p>
    </div>
  </div>
</footer>
