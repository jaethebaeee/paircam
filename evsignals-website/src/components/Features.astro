---
const features = [
  {
    title: 'Comprehensive Coverage',
    description: 'Track every major EV model, market, and trend globally. Real-time data from thousands of sources.',
    icon: 'globe',
  },
  {
    title: 'Real-Time Signals',
    description: 'Sub-second data delivery for time-sensitive decisions. Stay ahead with instant market updates.',
    icon: 'bolt',
  },
  {
    title: 'Enterprise-Grade API',
    description: 'RESTful API with SDKs, webhooks, and 99.9% uptime SLA. Built for scale and reliability.',
    icon: 'code',
  },
  {
    title: 'Actionable Insights',
    description: 'Pre-built analytics dashboards and custom reporting. Transform data into decisions.',
    icon: 'chart',
  },
];

const iconPaths: Record<string, string> = {
  globe: 'M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9',
  bolt: 'M13 10V3L4 14h7v7l9-11h-7z',
  code: 'M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4',
  chart: 'M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z',
};
---

<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900">
        Why Industry Leaders Choose EVSignals
      </h2>
      <p class="mt-4 text-xl text-gray-600 max-w-2xl mx-auto">
        Built for enterprises that need reliable, real-time EV market intelligence
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {features.map((feature) => (
        <div class="p-6 rounded-2xl bg-gray-50 hover:bg-gray-100 transition-colors">
          <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-blue-600 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPaths[feature.icon]} />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">
            {feature.title}
          </h3>
          <p class="text-gray-600 text-sm">
            {feature.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
