---
const products = [
  {
    title: 'EV Market Data API',
    description: 'Real-time and historical EV sales, registrations, and market share data across global markets.',
    features: ['Sales & registration data', 'Market share trends', 'Competitor analysis', 'Historical datasets'],
  },
  {
    title: 'Charging Infrastructure Feed',
    description: 'Live data on charging station availability, utilization rates, and pricing across networks.',
    features: ['Station availability', 'Utilization metrics', 'Pricing data', 'Network coverage'],
  },
  {
    title: 'Battery Analytics',
    description: 'Comprehensive battery performance data including range estimates and degradation patterns.',
    features: ['Range analytics', 'Degradation patterns', 'Performance benchmarks', 'Warranty data'],
  },
  {
    title: 'Custom Solutions',
    description: 'Tailored data feeds and analytics solutions designed for your specific use case.',
    features: ['Custom data feeds', 'White-label dashboards', 'API customization', 'Dedicated support'],
  },
];
---

<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900">
        Our Products
      </h2>
      <p class="mt-4 text-xl text-gray-600 max-w-2xl mx-auto">
        Comprehensive EV data products built for enterprise needs
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-8">
      {products.map((product, index) => (
        <div class="relative p-8 rounded-2xl border border-gray-200 hover:border-green-300 transition-colors bg-white">
          <div class="absolute top-4 right-4 w-8 h-8 bg-gray-100 rounded-full flex items-center justify-center text-gray-400 font-semibold text-sm">
            {index + 1}
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">
            {product.title}
          </h3>
          <p class="text-gray-600 mb-6">
            {product.description}
          </p>
          <ul class="space-y-2">
            {product.features.map((feature) => (
              <li class="flex items-center gap-2 text-sm text-gray-600">
                <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                {feature}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <div class="text-center mt-12">
      <a
        href="/contact"
        class="inline-flex items-center gap-2 bg-gradient-to-r from-green-500 to-blue-600 text-white px-8 py-4 rounded-lg font-semibold hover:opacity-90 transition-opacity"
      >
        Get Started
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>
