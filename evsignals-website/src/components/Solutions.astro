---
const solutions = [
  {
    title: 'Automotive & OEMs',
    description: 'Track competitor EV sales, market share trends, and consumer preferences. Make data-driven product and pricing decisions.',
    icon: 'car',
    color: 'blue',
  },
  {
    title: 'Energy & Utilities',
    description: 'Monitor charging demand patterns, grid integration metrics, and infrastructure utilization. Plan for the electric future.',
    icon: 'bolt',
    color: 'yellow',
  },
  {
    title: 'Financial Services',
    description: 'Access EV market signals for investment analysis, risk assessment, and portfolio optimization. Stay ahead of market shifts.',
    icon: 'chart',
    color: 'green',
  },
  {
    title: 'Fleet Management',
    description: 'Optimize EV fleet operations with real-time data on charging, range, and total cost of ownership analysis.',
    icon: 'truck',
    color: 'purple',
  },
];

const iconPaths: Record<string, string> = {
  car: 'M9 17a2 2 0 11-4 0 2 2 0 014 0zM19 17a2 2 0 11-4 0 2 2 0 014 0z M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10 M21 16V8a2 2 0 00-2-2h-3l-2-3H8L6 6H3',
  bolt: 'M13 10V3L4 14h7v7l9-11h-7z',
  chart: 'M16 8v8m-4-5v5m-4-2v2m-2 4h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z',
  truck: 'M8 17h.01M8 17a2 2 0 100 4 2 2 0 000-4zm0 0H5a2 2 0 01-2-2V7a2 2 0 012-2h10a2 2 0 012 2v2m0 6h.01M16 17a2 2 0 100 4 2 2 0 000-4zm0 0h-4m4 0v-4a2 2 0 012-2h2.586a1 1 0 01.707.293l2.414 2.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2',
};
---

<section class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900">
        Solutions by Industry
      </h2>
      <p class="mt-4 text-xl text-gray-600 max-w-2xl mx-auto">
        Tailored EV intelligence for your specific business needs
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-8">
      {solutions.map((solution) => (
        <div class="bg-white p-8 rounded-2xl shadow-sm hover:shadow-md transition-shadow border border-gray-100">
          <div class="flex items-start gap-4">
            <div class="w-14 h-14 bg-gradient-to-br from-green-500 to-blue-600 rounded-xl flex items-center justify-center flex-shrink-0">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPaths[solution.icon]} />
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-semibold text-gray-900 mb-2">
                {solution.title}
              </h3>
              <p class="text-gray-600">
                {solution.description}
              </p>
              <a href="/solutions" class="inline-flex items-center gap-1 mt-4 text-green-600 font-medium hover:text-green-700">
                Learn more
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
