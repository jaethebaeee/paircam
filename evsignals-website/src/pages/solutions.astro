---
import Layout from '../layouts/Layout.astro';

const solutions = [
  {
    id: 'automotive',
    title: 'Automotive & OEMs',
    subtitle: 'Data-driven product and market strategies',
    description: 'Access comprehensive EV market intelligence to inform product development, pricing strategies, and competitive positioning.',
    features: [
      'Real-time competitor sales tracking',
      'Market share analysis by region and segment',
      'Consumer preference trends',
      'New model launch impact analysis',
      'Pricing intelligence across markets',
      'Production and inventory signals',
    ],
    useCases: [
      'Product planning and roadmap development',
      'Competitive benchmarking',
      'Market entry strategy',
      'Pricing optimization',
    ],
  },
  {
    id: 'energy',
    title: 'Energy & Utilities',
    subtitle: 'Plan for the electric future',
    description: 'Monitor EV adoption trends and charging infrastructure demands to plan grid investments and optimize energy distribution.',
    features: [
      'EV adoption forecasting by region',
      'Charging demand patterns and peaks',
      'Grid load impact analysis',
      'Infrastructure utilization metrics',
      'Time-of-use charging data',
      'Renewable integration insights',
    ],
    useCases: [
      'Grid capacity planning',
      'Charging infrastructure investment',
      'Demand response programs',
      'Rate structure optimization',
    ],
  },
  {
    id: 'financial',
    title: 'Financial Services',
    subtitle: 'Investment-grade EV market signals',
    description: 'Access alternative data signals for investment analysis, risk assessment, and portfolio optimization in the EV sector.',
    features: [
      'Real-time sales and production data',
      'Supply chain indicators',
      'Consumer demand signals',
      'Market sentiment analysis',
      'Regulatory impact tracking',
      'Cross-market correlation data',
    ],
    useCases: [
      'Equity research and analysis',
      'Alternative data strategies',
      'Risk assessment',
      'ESG investing insights',
    ],
  },
  {
    id: 'fleet',
    title: 'Fleet Management',
    subtitle: 'Optimize your EV fleet operations',
    description: 'Make informed decisions on EV fleet transitions with comprehensive TCO analysis and operational intelligence.',
    features: [
      'Total cost of ownership modeling',
      'Charging infrastructure planning',
      'Range and performance benchmarks',
      'Maintenance cost projections',
      'Resale value forecasting',
      'Route optimization data',
    ],
    useCases: [
      'Fleet electrification planning',
      'Vehicle selection optimization',
      'Charging network strategy',
      'Operational efficiency analysis',
    ],
  },
];
---

<Layout title="Solutions - EVSignals" description="Tailored EV intelligence solutions for automotive, energy, financial, and fleet management industries.">
  <!-- Hero -->
  <section class="pt-32 pb-16 bg-gradient-to-br from-gray-50 to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900">
        Solutions by Industry
      </h1>
      <p class="mt-6 text-xl text-gray-600 max-w-2xl mx-auto">
        Tailored EV market intelligence designed for your specific business needs and use cases.
      </p>
    </div>
  </section>

  <!-- Solutions -->
  {solutions.map((solution, index) => (
    <section id={solution.id} class={`py-20 ${index % 2 === 0 ? 'bg-white' : 'bg-gray-50'}`}>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12 items-start">
          <div>
            <h2 class="text-3xl font-bold text-gray-900 mb-2">
              {solution.title}
            </h2>
            <p class="text-lg text-green-600 font-medium mb-4">
              {solution.subtitle}
            </p>
            <p class="text-gray-600 text-lg mb-8">
              {solution.description}
            </p>

            <h3 class="font-semibold text-gray-900 mb-4">Key Features</h3>
            <ul class="space-y-3 mb-8">
              {solution.features.map((feature) => (
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-gray-600">{feature}</span>
                </li>
              ))}
            </ul>

            <a
              href="/contact"
              class="inline-flex items-center gap-2 bg-gradient-to-r from-green-500 to-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:opacity-90 transition-opacity"
            >
              Get Started
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          </div>

          <div class="bg-gray-100 rounded-2xl p-8">
            <h3 class="font-semibold text-gray-900 mb-6">Common Use Cases</h3>
            <div class="space-y-4">
              {solution.useCases.map((useCase) => (
                <div class="bg-white p-4 rounded-lg shadow-sm">
                  <p class="text-gray-700">{useCase}</p>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  ))}

  <!-- CTA -->
  <section class="py-20 bg-gray-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-6">
        Don't see your industry?
      </h2>
      <p class="text-xl text-gray-300 mb-8">
        We work with companies across the EV ecosystem. Contact us to discuss custom solutions.
      </p>
      <a
        href="/contact"
        class="inline-flex items-center gap-2 bg-white text-gray-900 px-8 py-4 rounded-lg font-semibold hover:bg-gray-100 transition-colors"
      >
        Contact Us
      </a>
    </div>
  </section>
</Layout>
