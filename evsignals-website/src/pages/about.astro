---
import Layout from '../layouts/Layout.astro';

const values = [
  {
    title: 'Data Accuracy',
    description: 'We validate every data point through multiple sources to ensure the highest accuracy standards.',
    icon: 'check',
  },
  {
    title: 'Real-Time Delivery',
    description: 'Sub-second data delivery ensures you have the freshest intelligence for time-sensitive decisions.',
    icon: 'bolt',
  },
  {
    title: 'Enterprise Reliability',
    description: '99.9% uptime SLA with redundant infrastructure designed for mission-critical applications.',
    icon: 'shield',
  },
  {
    title: 'Customer Success',
    description: 'Dedicated support and custom solutions to ensure your success with our platform.',
    icon: 'users',
  },
];

const iconPaths: Record<string, string> = {
  check: 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z',
  bolt: 'M13 10V3L4 14h7v7l9-11h-7z',
  shield: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
  users: 'M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z',
};
---

<Layout title="About - EVSignals" description="Learn about EVSignals, our mission to accelerate the EV transition through data transparency, and our commitment to enterprise-grade data intelligence.">
  <!-- Hero -->
  <section class="pt-32 pb-16 bg-gradient-to-br from-gray-50 to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900">
        About EVSignals
      </h1>
      <p class="mt-6 text-xl text-gray-600 max-w-2xl mx-auto">
        Powering the electric mobility revolution with real-time market intelligence
      </p>
    </div>
  </section>

  <!-- Mission -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-6">
            Our Mission
          </h2>
          <p class="text-lg text-gray-600 mb-6">
            EVSignals was founded with a clear mission: to accelerate the transition to electric mobility through data transparency and actionable intelligence.
          </p>
          <p class="text-lg text-gray-600 mb-6">
            We believe that better data leads to better decisions. By providing comprehensive, real-time EV market signals to automotive manufacturers, energy companies, financial institutions, and fleet operators, we're helping shape the future of transportation.
          </p>
          <p class="text-lg text-gray-600">
            Our platform aggregates, normalizes, and delivers data from thousands of sources, transforming raw information into the actionable intelligence that powers critical business decisions across the electric vehicle ecosystem.
          </p>
        </div>
        <div class="bg-gradient-to-br from-green-500 to-blue-600 rounded-2xl p-8 text-white">
          <blockquote class="text-2xl font-medium mb-6">
            "The future of mobility is electric. The future of decisions is data-driven."
          </blockquote>
          <p class="text-white/80">
            â€” EVSignals Team
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- What We Do -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-gray-900">
          What We Do
        </h2>
        <p class="mt-4 text-xl text-gray-600 max-w-2xl mx-auto">
          We're the data backbone for the electric vehicle industry
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-white p-8 rounded-2xl shadow-sm">
          <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Aggregate</h3>
          <p class="text-gray-600">
            We collect EV market data from thousands of sources globally, including registrations, sales, charging networks, and more.
          </p>
        </div>

        <div class="bg-white p-8 rounded-2xl shadow-sm">
          <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Normalize</h3>
          <p class="text-gray-600">
            Our data processing pipelines clean, standardize, and validate data to ensure consistency and accuracy across all sources.
          </p>
        </div>

        <div class="bg-white p-8 rounded-2xl shadow-sm">
          <div class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Deliver</h3>
          <p class="text-gray-600">
            Real-time APIs, webhooks, and dashboards deliver intelligence exactly when and where you need it.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Values -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-gray-900">
          Our Values
        </h2>
        <p class="mt-4 text-xl text-gray-600 max-w-2xl mx-auto">
          The principles that guide everything we do
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        {values.map((value) => (
          <div class="text-center">
            <div class="w-14 h-14 bg-gradient-to-br from-green-500 to-blue-600 rounded-xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPaths[value.icon]} />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">
              {value.title}
            </h3>
            <p class="text-gray-600 text-sm">
              {value.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 bg-gray-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-6">
        Ready to work with us?
      </h2>
      <p class="text-xl text-gray-300 mb-8">
        Join the companies using EVSignals to power their electric mobility strategies.
      </p>
      <a
        href="/contact"
        class="inline-flex items-center gap-2 bg-gradient-to-r from-green-500 to-blue-600 text-white px-8 py-4 rounded-lg font-semibold hover:opacity-90 transition-opacity"
      >
        Get in Touch
      </a>
    </div>
  </section>
</Layout>
