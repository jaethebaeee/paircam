---
import Layout from '../layouts/Layout.astro';

const products = [
  {
    id: 'market-data',
    title: 'EV Market Data API',
    description: 'Comprehensive real-time and historical EV sales, registration, and market share data across global markets.',
    icon: 'chart',
    features: [
      { name: 'Global Coverage', detail: 'Data from 50+ countries and all major markets' },
      { name: 'Real-Time Updates', detail: 'Sub-second data delivery for time-critical applications' },
      { name: 'Historical Data', detail: '10+ years of historical market data' },
      { name: 'Granular Segments', detail: 'By model, brand, region, and vehicle type' },
    ],
    endpoints: [
      'GET /v1/sales/realtime',
      'GET /v1/market-share/{region}',
      'GET /v1/registrations/{country}',
      'GET /v1/trends/historical',
    ],
  },
  {
    id: 'charging',
    title: 'Charging Infrastructure Feed',
    description: 'Live data on charging station availability, utilization rates, pricing, and network coverage.',
    icon: 'bolt',
    features: [
      { name: 'Station Availability', detail: 'Real-time status for 500K+ charging points' },
      { name: 'Utilization Metrics', detail: 'Historical and predictive utilization data' },
      { name: 'Pricing Data', detail: 'Current and historical charging rates' },
      { name: 'Network Analytics', detail: 'Coverage and density analysis' },
    ],
    endpoints: [
      'GET /v1/stations/nearby',
      'GET /v1/stations/{id}/status',
      'GET /v1/utilization/{network}',
      'GET /v1/pricing/compare',
    ],
  },
  {
    id: 'battery',
    title: 'Battery Analytics',
    description: 'Comprehensive battery performance data including range estimates, degradation patterns, and benchmarks.',
    icon: 'battery',
    features: [
      { name: 'Range Analytics', detail: 'Real-world range data by model and conditions' },
      { name: 'Degradation Patterns', detail: 'Battery health trends over time' },
      { name: 'Performance Benchmarks', detail: 'Cross-model performance comparisons' },
      { name: 'Warranty Intelligence', detail: 'Claim rates and coverage analysis' },
    ],
    endpoints: [
      'GET /v1/battery/{model}/range',
      'GET /v1/battery/degradation',
      'GET /v1/battery/benchmarks',
      'GET /v1/battery/warranty-stats',
    ],
  },
  {
    id: 'custom',
    title: 'Custom Solutions',
    description: 'Tailored data feeds, white-label dashboards, and custom integrations for enterprise clients.',
    icon: 'cog',
    features: [
      { name: 'Custom Data Feeds', detail: 'Tailored data pipelines for your needs' },
      { name: 'White-Label Dashboards', detail: 'Branded analytics interfaces' },
      { name: 'API Customization', detail: 'Custom endpoints and data formats' },
      { name: 'Dedicated Support', detail: '24/7 enterprise support team' },
    ],
    endpoints: [
      'Custom endpoints',
      'Webhook integrations',
      'Batch data exports',
      'Real-time streaming',
    ],
  },
];

const iconPaths: Record<string, string> = {
  chart: 'M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z',
  bolt: 'M13 10V3L4 14h7v7l9-11h-7z',
  battery: 'M17 6h-2V4a1 1 0 00-1-1H10a1 1 0 00-1 1v2H7a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2V8a2 2 0 00-2-2zm-3 10H10v-4h4v4z',
  cog: 'M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z M15 12a3 3 0 11-6 0 3 3 0 016 0z',
};
---

<Layout title="Products - EVSignals" description="Explore our EV data products: Market Data API, Charging Infrastructure Feed, Battery Analytics, and Custom Solutions.">
  <!-- Hero -->
  <section class="pt-32 pb-16 bg-gradient-to-br from-gray-50 to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900">
        Our Products
      </h1>
      <p class="mt-6 text-xl text-gray-600 max-w-2xl mx-auto">
        Enterprise-grade EV data products built for reliability, accuracy, and scale.
      </p>
    </div>
  </section>

  <!-- Products -->
  {products.map((product, index) => (
    <section id={product.id} class={`py-20 ${index % 2 === 0 ? 'bg-white' : 'bg-gray-50'}`}>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12 items-start">
          <div>
            <div class="w-14 h-14 bg-gradient-to-br from-green-500 to-blue-600 rounded-xl flex items-center justify-center mb-6">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPaths[product.icon]} />
              </svg>
            </div>
            <h2 class="text-3xl font-bold text-gray-900 mb-4">
              {product.title}
            </h2>
            <p class="text-gray-600 text-lg mb-8">
              {product.description}
            </p>

            <div class="space-y-4 mb-8">
              {product.features.map((feature) => (
                <div class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-green-500 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <div>
                    <span class="font-medium text-gray-900">{feature.name}</span>
                    <span class="text-gray-600"> - {feature.detail}</span>
                  </div>
                </div>
              ))}
            </div>

            <a
              href="/contact"
              class="inline-flex items-center gap-2 bg-gradient-to-r from-green-500 to-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:opacity-90 transition-opacity"
            >
              Request Access
            </a>
          </div>

          <div class="bg-gray-900 rounded-2xl p-6 text-sm font-mono">
            <div class="flex items-center gap-2 mb-4">
              <div class="w-3 h-3 rounded-full bg-red-500"></div>
              <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
              <div class="w-3 h-3 rounded-full bg-green-500"></div>
              <span class="text-gray-400 ml-2">API Endpoints</span>
            </div>
            <div class="space-y-2">
              {product.endpoints.map((endpoint) => (
                <div class="text-green-400">
                  <span class="text-gray-500"># </span>{endpoint}
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  ))}

  <!-- API Features -->
  <section class="py-20 bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-white text-center mb-12">
        Built for Developers
      </h2>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-12 h-12 bg-green-500/20 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-white mb-2">RESTful API</h3>
          <p class="text-gray-400">Simple, intuitive REST endpoints with comprehensive documentation</p>
        </div>
        <div class="text-center">
          <div class="w-12 h-12 bg-green-500/20 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-white mb-2">SDKs & Libraries</h3>
          <p class="text-gray-400">Official SDKs for Python, JavaScript, and more coming soon</p>
        </div>
        <div class="text-center">
          <div class="w-12 h-12 bg-green-500/20 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-white mb-2">Webhooks</h3>
          <p class="text-gray-400">Real-time event notifications for your applications</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">
        Ready to get started?
      </h2>
      <p class="text-xl text-gray-600 mb-8">
        Contact our team to discuss your data needs and get API access.
      </p>
      <a
        href="/contact"
        class="inline-flex items-center gap-2 bg-gradient-to-r from-green-500 to-blue-600 text-white px-8 py-4 rounded-lg font-semibold hover:opacity-90 transition-opacity"
      >
        Contact Sales
      </a>
    </div>
  </section>
</Layout>
