# Node Environment
NODE_ENV=development
PORT=3333

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=7d

# Database (Neon - Serverless PostgreSQL)
DATABASE_URL=postgresql://[USER]:[PASSWORD]@ep-xxx.us-east-1.aws.neon.tech/paircam?sslmode=require

# Redis (Upstash - Serverless Redis)
REDIS_URL=rediss://default:[PASSWORD]@[HOST].upstash.io:6379

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID_WEEKLY=price_...
STRIPE_PRICE_ID_MONTHLY=price_...

# Google OAuth (optional)
GOOGLE_CLIENT_ID=...apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=...

# Frontend URL
FRONTEND_URL=https://paircam.live

# TURN Server (Metered.ca)
TURN_PROVIDER=managed
TURN_URLS=turn:a.relay.metered.ca:80,turns:a.relay.metered.ca:443
TURN_USERNAME=...
TURN_PASSWORD=...

# CORS
CORS_ORIGINS=https://paircam.live,http://localhost:5173
