# Connect - Global Random Video Chat App
# Environment Configuration Example

# ============================================
# GENERAL
# ============================================
NODE_ENV=development
LOG_LEVEL=debug

# ============================================
# DATABASE (PostgreSQL)
# ============================================
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=connect
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/connect

# ============================================
# CACHE (Redis)
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# AUTHENTICATION
# ============================================
JWT_SECRET=your-super-secret-key-change-in-production-min-32-characters
JWT_EXPIRATION=5m

# ============================================
# API & FRONTEND
# ============================================
PORT=3000
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://yourdomain.com

# ============================================
# TURN Server (WebRTC)
# ============================================
TURN_PROVIDER=coturn
TURN_HOST=turn.yourdomain.com
TURN_PORT=3478
TURN_TLS_PORT=5349
TURN_SHARED_SECRET=your-turn-secret

# ============================================
# OAUTH (Google, Apple)
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=https://yourdomain.com/auth/google/callback

# ============================================
# PAYMENTS (Stripe)
# ============================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID_WEEKLY=price_...
STRIPE_PRICE_ID_MONTHLY=price_...

# ============================================
# GORSE (ML Recommendations - Optional)
# ============================================
GORSE_API_URL=http://localhost:8088
GORSE_SYNC_INTERVAL_MINUTES=60

# ============================================
# MONITORING
# ============================================
PROMETHEUS_PORT=9090
OTEL_ENABLED=true

# ============================================
# ABUSE DETECTION
# ============================================
ABUSE_DETECTION_ENABLED=true
MAX_CALLS_PER_MINUTE=100
MAX_SKIPS_PER_SESSION=5

# ============================================
# FRONTEND
# ============================================
VITE_API_URL=http://localhost:3000
VITE_SIGNALING_URL=ws://localhost:3000/signaling
VITE_ENVIRONMENT=development
